{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://aah.artygroup.co/schemas/decision-request@1.0.json",
  "title": "AAH Decision Request",
  "description": "Schema for human-in-the-loop decision request artifacts",
  "type": "object",
  "required": ["schema", "data"],
  "properties": {
    "schema": {
      "const": "aah:decision/request@1.0"
    },
    "data": {
      "type": "object",
      "required": ["decisions"],
      "properties": {
        "context": {
          "type": "string",
          "description": "Human-readable context for the decision set"
        },
        "decisions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/decision"
          }
        },
        "blocking": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/blockingItem"
          }
        },
        "deadline": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 datetime when decisions are needed"
        },
        "escalation": {
          "type": "object",
          "properties": {
            "after": {
              "type": "string",
              "pattern": "^\\d+[hdwm]$",
              "description": "Duration before escalation (e.g., '24h', '7d')"
            },
            "to": {
              "type": "string",
              "description": "Email, agent_id, or role to escalate to"
            }
          }
        }
      }
    }
  },
  "$defs": {
    "decision": {
      "type": "object",
      "required": ["id", "type", "prompt", "required"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier within this request"
        },
        "type": {
          "type": "string",
          "enum": ["approval", "choice", "multi_choice", "text", "number", "date"],
          "description": "Type of decision"
        },
        "prompt": {
          "type": "string",
          "description": "The question being asked"
        },
        "description": {
          "type": "string",
          "description": "Additional context for the decision"
        },
        "required": {
          "type": "boolean",
          "description": "Whether this decision must be answered to proceed"
        },
        "default": {
          "description": "Default value if not answered"
        },
        "options": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/option"
          },
          "description": "Options for choice/multi_choice types"
        },
        "constraints": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" },
            "pattern": { "type": "string" }
          }
        }
      }
    },
    "option": {
      "type": "object",
      "required": ["value", "label"],
      "properties": {
        "value": {
          "type": "string",
          "description": "Machine-readable option value"
        },
        "label": {
          "type": "string",
          "description": "Human-readable option label"
        },
        "description": {
          "type": "string",
          "description": "Additional context for this option"
        }
      }
    },
    "blockingItem": {
      "type": "object",
      "required": ["description"],
      "properties": {
        "task_id": {
          "type": "string"
        },
        "artifact_id": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      }
    }
  }
}
