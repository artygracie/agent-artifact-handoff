{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aah.spec/schemas/section.schema.json",
  "title": "AAH Section",
  "description": "A section within a sectioned artifact",
  "type": "object",
  "required": ["id", "heading", "content", "agent_id", "created_at", "updated_at"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable section identifier (e.g., 'baseline', 'day-1')",
      "pattern": "^[a-z0-9][a-z0-9-]*$",
      "examples": ["overview", "baseline", "rollback", "day-1"]
    },
    "heading": {
      "type": "string",
      "description": "Display title for the section",
      "minLength": 1,
      "maxLength": 200
    },
    "content": {
      "type": "string",
      "description": "Markdown content of the section"
    },
    "agent_id": {
      "type": "string",
      "description": "Identifier of the agent that owns/created this section"
    },
    "agent_name": {
      "type": "string",
      "description": "Human-readable name of the agent"
    },
    "position": {
      "type": "integer",
      "description": "Display order (0-indexed)",
      "minimum": 0,
      "default": 0
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of section creation"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last modification"
    },
    "version": {
      "type": "integer",
      "description": "Section version number",
      "minimum": 1,
      "default": 1
    }
  }
}
